<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoneyTracker.Fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/chooseCur"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:clickable="true"

                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                tools:ignore="OnClick">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_currency" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="1dp"
                        android:layout_toEndOf="@+id/imageView4"
                        android:text="Currency"
                        android:textColor="#3F51B5"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/changeCur"
                        android:layout_width="109dp"
                        android:layout_height="33dp"
                        android:layout_below="@+id/textView5"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="212dp"
                        android:layout_marginBottom="3dp"
                        android:layout_toEndOf="@+id/imageView4"
                        android:text="PHP"
                        android:textColor="#3F51B5"
                        android:textSize="18sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginBottom="158dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


            <androidx.cardview.widget.CardView
                android:id="@+id/clickBudget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_budget"
                        app:srcCompat="@drawable/ic_budget" />

                    <TextView
                        android:id="@+id/setBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="42dp"
                        android:layout_toEndOf="@+id/imageView5"
                        android:text="Set Budget"
                        android:textColor="#3F51B5"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/changeBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="37dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/imageView5"
                        android:text="3000.00 PHP"
                        android:textColor="#3F51B5"
                        android:textSize="18sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="2dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


            <androidx.cardview.widget.CardView
                android:id="@+id/clickTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="0dp"
                        android:src="@drawable/ic_budget"
                        app:srcCompat="@drawable/ic_budget" />

                    <TextView
                        android:id="@+id/setTime"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="42dp"
                        android:layout_toEndOf="@+id/imageView6"
                        android:text="Set Time"
                        android:textColor="#3F51B5"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/changeTime"
                        android:layout_width="wrap_content"
                        android:layout_height="31dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="37dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toEndOf="@+id/imageView6"
                        android:text="3:00 PM"
                        android:textColor="#3F51B5"
                        android:textSize="18sp" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <TextView
            android:id="@+id/remindBudget"
            android:layout_width="282dp"
            android:layout_height="207dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="31dp"
            android:fontFamily="@font/roboto_mono_medium"
            android:text="You set your budget last July-01-2021 and valid until July-31-2021"
            android:textAlignment="center"
            android:textColor="#CDCBCB"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>